generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Equipment {
  id          Int      @id @default(autoincrement())
  name        String
  type        String
  location    String
  rfid        String   @unique
  responsible String?
  isInRange   Boolean  @default(true) // se est√° dentro do alcance do sensor
  updatedAt   DateTime @updatedAt
}